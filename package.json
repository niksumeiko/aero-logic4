{
  "name": "aero-logic4",
  "description": "A kata to learn automation testing for React app built with Tanstack Router",
  "private": true,
  "version": "1.0.0",
  "author": {
    "name": "Nik Sumeiko",
    "url": "https://withnik.com"
  },
  "type": "module",
  "scripts": {
    "start": "concurrently --kill-others \"npm run start:server\" \"npx vite\"",
    "start:server": "json-server db.json",
    "build": "tsc && vite build",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}' --report-unused-disable-directives --fix",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,md}'",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "test:integration": "cypress open --component --browser electron"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.62.2",
    "@tanstack/react-router": "^1.129.0",
    "autoprefixer": "^10.4.20",
    "classnames": "^2.5.1",
    "dotenv": "^16.4.7",
    "random-int": "^3.0.0",
    "random-item": "^4.0.1",
    "random-object-key": "^4.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "riddle-exam": "file:packages/riddle-exam"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.3",
    "@tailwindcss/vite": "^4.1.10",
    "@tanstack/react-router-devtools": "^1.129.0",
    "@tanstack/router-plugin": "^1.129.0",
    "@types/node": "^22.10.1",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "@types/ws": "^8.18.1",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vitejs/plugin-react-swc": "^3.7.2",
    "@vitest/coverage-v8": "^3.1.1",
    "@vitest/ui": "^3.1.1",
    "concurrently": "^9.1.2",
    "cypress": "^14.3.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-cypress": "^4.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "json-server": "1.0.0-beta.3",
    "postcss": "^8.5.3",
    "prettier": "^3.4.2",
    "sass-embedded": "^1.82.0",
    "tailwindcss": "^4.1.3",
    "typescript": "^5.7.2",
    "vite": "^6.0.2",
    "vitest": "^3.1.1"
  }
}
